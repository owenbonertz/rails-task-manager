<h1>Edit your task</h1>
<h2><%= @taskerov.title %></h2>
<p><%= @taskerov.details %></p>

<%= form_with model: @taskerov do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>

<%= link_to "Go back to index", tasks_path %>
